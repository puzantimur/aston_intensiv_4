<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.astonintensiv4.Clock
        android:id="@+id/clock"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:hours_hand_color="@android:color/holo_green_dark"
        app:circle_color="@color/purple_200"
        app:center_color="@color/black"
        app:length_hours_hand="150"
        app:length_minutes_hand="200"
        app:length_seconds_hand="250"
        app:minutes_hand_color="@color/teal_200"
        app:seconds_hand_color="@color/purple_700" />

</LinearLayout>